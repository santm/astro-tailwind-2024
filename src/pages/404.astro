---
import BaseLayout from '../layouts/BaseLayout.astro';
const title = "Page Not Found";
let description = 'error 404';
import { Image } from "astro:assets";
import fourofour from '../assets/404.svg';
import { Icon } from "astro-icon/components";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<BaseLayout content={{ title, description }}>
    <div
	class="flex flex-col justify-center items-center px-6 mx-auto h-screen xl:px-0 dark:bg-gray-900"
>
	<div class="block md:max-w-lg">
		<Image src={fourofour} alt="not found"/>
	</div>
	<div class="text-center xl:max-w-4xl">
		<h1
			class="text-balance  pb-4 mb-6 text-2xl font-bold leading-tight sm:text-4xl lg:text-5xl text-transparent bg-clip-text bg-gradient-to-br from-pink-400 to-violet-800 dark:from-pink-300 dark:to-violet-700 no-underline">
			Page {canonicalURL.pathname} not found
		</h1>
		<p
			class="mb-5 text-base font-normal text-gray-500 md:text-lg dark:text-gray-400"
		>
			Oops! Looks like you followed a bad link. Sorry for that.
		</p>
		<a href="/" class="text-sky-600 dark:text-sky-400 bg-sky-400/10 hover:bg-sky-400/20 font-semibold h-12 px-6 rounded-full w-full justify-center sm:w-auto  text-sm py-2.5 text-center inline-flex items-center mr-3">
			<Icon name="phosphor/caret-double-left" class="inline-flex"></Icon> Go back home
		 </a>

	</div>
</div>

</BaseLayout>
