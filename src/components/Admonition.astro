---
// import { Icon } from "astro-icon";\
import { Icon } from 'astro-icon/components';
interface Props {
  variant: "tip" | "warning" | "danger" | "info";
}
const { variant } = Astro.props as Props;
// create a switch statement that switches on "variant" and returns the appropriate icon
const icon = (() => {
  switch (variant) {
    case "tip":
      return "phosphor/lightbulb";
    case "warning":
      return "phosphor/warning";
    case "danger":
      return "phosphor/warning-diamond";
    case "info":
      return "phosphor/info";
  }
})();
// <Admonition variant="tip">
//   If you are using a framework, odds are this extension is unecessary. Your
//   framework will have a similar feature built in for live reloading.
// </Admonition>
// <Admonition variant="warning">
//   If you are using a framework, odds are this extension is unecessary. Your
//   framework will have a similar feature built in for live reloading.
// </Admonition>
// <Admonition variant="danger">
//   If you are using a framework, odds are this extension is unecessary. Your
//   framework will have a similar feature built in for live reloading.
// </Admonition>
---
<div class:list={[
  "rounded-lg border border-l-4 mb-4",
  {
      "text-blue-800 border-green-300 bg-green-50 dark:text-green-400 dark:bg-gray-800 dark:border-green-800":
        variant === "tip",
    },
    {
      "text-yellow-800 border-yellow-300 bg-yellow-50 dark:text-yellow-400 dark:bg-gray-800 dark:border-yellow-800":
        variant === "warning",
    },
    {
      "text-red-800  border-red-300 bg-red-50 dark:text-red-400 dark:bg-gray-800 dark:border-red-800":
        variant === "danger",
    },
    {
      "text-blue-800 border-blue-300 bg-blue-50 dark:text-blue-400 dark:bg-gray-800 dark:border-blue-800":
        variant === "info",
    },
  ]}>
  <div class="flex items-center m-4">
    <Icon name={icon} class="h-9 w-9 mr-2" aria-hidden="true" />
    <p class="text-lg font-semibold uppercase">{variant.toUpperCase()}</p>
  </div>
  <div class="m-4"><slot /></div>
</div>