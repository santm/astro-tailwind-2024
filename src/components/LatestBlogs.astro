          </div>
          <h1 class="pb-4 text-4xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
              Latest Blog Entries </h1>
          <!-- Grid -->
      <div class="mt-6 md:mt-12 grid sm:grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6 lg:gap-3 xl:gap-6 lg:items-cente">

   
           {last4posts.map(blogPostEntry => (
            <div class="group flex flex-col h-full max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
              <a href={`/blog/${blogPostEntry.slug}`}><Image src={blogPostEntry.data.cover} alt={ blogPostEntry.data.coverAlt ? `${blogPostEntry.data.coverAlt}` : `generic alt text` } /></a>
