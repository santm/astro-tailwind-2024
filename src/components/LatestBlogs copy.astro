---
import Container from "./Container.astro";
//
import { getCollection } from "astro:content";
const allPosts = (await getCollection('blog')); 
//const sortedPosts = allPosts.sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate));
const sortedPosts = allPosts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate) as any; // Explicitly specify the type
  const dateB = new Date(b.data.pubDate) as any; // Explicitly specify the type

  return dateB - dateA;
});

const last4posts = sortedPosts.slice(0,4);
import BlogCard3 from "../components/BlogCard3.astro";
---

<div id="features">
  <Container>
    <div class="relative pt-36 ml-auto">
        <div class="md:w-2/3 lg:w-1/2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-orange-500">
              <path
                fill-rule="evenodd"
                d="M9 4.5a.75.75 0 01.721.544l.813 2.846a3.75 3.75 0 002.576 2.576l2.846.813a.75.75 0 010 1.442l-2.846.813a3.75 3.75 0 00-2.576 2.576l-.813 2.846a.75.75 0 01-1.442 0l-.813-2.846a3.75 3.75 0 00-2.576-2.576l-2.846-.813a.75.75 0 010-1.442l2.846-.813A3.75 3.75 0 007.466 7.89l.813-2.846A.75.75 0 019 4.5zM18 1.5a.75.75 0 01.728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 010 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 01-1.456 0l-.258-1.036a2.625 2.625 0 00-1.91-1.91l-1.036-.258a.75.75 0 010-1.456l1.036-.258a2.625 2.625 0 001.91-1.91l.258-1.036A.75.75 0 0118 1.5zM16.5 15a.75.75 0 01.712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 010 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 01-1.422 0l-.395-1.183a1.5 1.5 0 00-.948-.948l-1.183-.395a.75.75 0 010-1.422l1.183-.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0116.5 15z"
                clip-rule="evenodd"></path>
            </svg>
            
            
          </div>
          <h1 class="text-balance pb-4 text-4xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500">
              Latest Blog Entries </h1>
          <!-- Grid -->
      <div class="mt-6 md:mt-12 grid sm:grid-cols-2 lg:grid-cols-4 gap-3 md:gap-6 lg:gap-3 xl:gap-6 lg:items-cente">
          <!-- Card -->
        {last4posts.map((post) => {
          // Check if content includes the import statement
          const hasImageImport = /import\s*\{\s*Image\s*\}\s*from\s*'astro:assets'\s*;?/.test(post.body) ? 1 : 0;
          
          // Initialize firstImagePath variables
          let firstImagePath;
        
          // Regular expression to match import statements and capture the path and filename
          const importRegex = /import\s+(\w+)\s+from\s+'(.+\.((jpe?g)|(png)|(gif)|(webp)))';/g;
          let match;
          const imagePaths = [];
        
          while ((match = importRegex.exec(post.body)) !== null) {
            const [, variableName, path] = match;
            imagePaths.push(path);
          }
        
          // Assign the first image path if it exists
          if (hasImageImport === 1 && imagePaths.length > 0) {
            firstImagePath = imagePaths[0];
            // Add more code as needed
          }
        
          return (
            <BlogCard3
              // img_src={post.data.image.src ? post.data.image.src : 'https://ik.imagekit.io/santm/rose-large_zgSiv4dBc.webp'}
              img_src={post.data.image.src}
              alt={post.data.image.alt}
              title={post.data.title}
              link={"/blog/" + post.slug}
              description={post.data.description}
              category={post.data.category}
              pubDate={post.data.pubDate}
              hasImageImport={hasImageImport}  {/* Pass the result to the component if needed */}
              firstImagePath={firstImagePath}  {/* Pass the first image path to the component if needed */}
            />
          );
        })}
        
        
        
          <!-- End Card -->
    </div>
    



  </Container>
</div>
